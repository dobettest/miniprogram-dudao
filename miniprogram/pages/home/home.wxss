}
.news_item{
  background-color:white;
  display: flex;
  align-items: center;
}
.news_item .news_title{
  flex:7;
  display: -webkit-box;
  overflow: hidden;
  -webkit-box-orient: vertical;
  -webkit-line-clamp:1;
}
.news_item .news_time{
  flex:2;
}
.news_item i{
  vertical-align: middle;
  font-size: 32rpx;
}