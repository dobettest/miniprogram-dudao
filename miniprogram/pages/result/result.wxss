.result_list .list_item {
  display: flex;
  border: 1rpx solid #ccc;
  align-items: center;
}
.result_list .list_item .item_name {
  flex: 4;
  display: -webkit-box;
  overflow: hidden;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 2;
}
.result_list .list_item .result_info_detail {
  flex: 3;
  display: flex;
  flex-direction: column;
}
.result_list .list_item .result_info_detail .item_id {
  display: -webkit-box;
  overflow: hidden;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 2;
  word-break: break-all;
}
.result_list .list_item .result_info_detail .item_id text {
  color: red;
}
.result_list .list_item .result_info_detail .item_date text {
  color: red;
}
.err .title_wrap {
  text-align: center;
}
